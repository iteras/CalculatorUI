<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.calcubaator.intz.CalculatorUI.MainActivity">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"

        >

        <Button
            android:id="@+id/button1"
            android:textSize="35dp"
            android:layout_above="@+id/buttonDot"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_number"
            android:text="1"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button2"
            android:layout_alignTop="@+id/button1"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/btn_number"
            android:text="2"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_alignTop="@+id/button2"
            android:layout_toRightOf="@+id/button2"
            android:background="@drawable/btn_number"
            android:text="3"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/button4"
            android:layout_above="@+id/button1"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_number"
            android:text="4"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/button5"
            android:layout_alignTop="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:background="@drawable/btn_number"
            android:text="5"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_alignTop="@+id/button5"
            android:layout_toRightOf="@+id/button5"
            android:background="@drawable/btn_number"
            android:text="6"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_above="@+id/button4"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_number"
            android:text="7"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_alignTop="@+id/button7"
            android:layout_toRightOf="@+id/button7"
            android:background="@drawable/btn_number"
            android:text="8"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_alignTop="@+id/button8"
            android:layout_toRightOf="@+id/button8"
            android:background="@drawable/btn_number"
            android:text="9"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/button0"
            android:layout_toRightOf="@+id/buttonDot"
            android:layout_alignTop="@+id/buttonDot"
            android:background="@drawable/btn_number"
            android:text="0"
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/buttonDot"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_number"
            android:text="."
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/buttonEquals"
            android:layout_alignTop="@+id/button0"
            android:layout_toRightOf="@+id/button0"
            android:background="@drawable/btn_number"
            android:text="="
            app:layout_heightPercent="17.5%"
            app:layout_widthPercent="25%"

            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/buttonPlus"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_operand"
            android:text="+"
            app:layout_heightPercent="14%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/buttonMinus"
            android:layout_above="@+id/buttonPlus"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_operand"
            android:text="-"
            app:layout_heightPercent="14%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_above="@+id/buttonMinus"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_operand"
            android:text="*"
            app:layout_heightPercent="14%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <TextView
            android:id="@+id/inputOutput"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="100%"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/button7"
            android:textSize="70sp"
            android:gravity="center|end"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/errorText"
            app:layout_heightPercent="5%"
            app:layout_widthPercent="100%"
            android:layout_alignStart="@+id/button7"
            android:layout_above="@+id/button7"
            android:textSize="25sp"
            android:gravity="center|end"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <Button
            android:id="@+id/buttonDivide"
            android:layout_above="@+id/buttonMultiply"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_operand"
            android:text="/"
            app:layout_heightPercent="14%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/buttonClear"
            android:layout_above="@+id/buttonDivide"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_operand"
            android:text="C"
            app:layout_heightPercent="14.1%"
            app:layout_widthPercent="25%"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="35dp"/>

    </android.support.percent.PercentRelativeLayout>
</RelativeLayout>